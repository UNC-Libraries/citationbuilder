<script id="tmpl-book" type="text/x-mustache-tmpl">
<ul>
    <li><a href="#tabs-1">in print</a></li>
    <li><a href="#tabs-2">on a website</a></li>
    <li><a href="#tabs-3">in a database</a></li>
    <li><a href="#tabs-4">as a digital file</a></li>
</ul>
<div id="tabs-1">
    <form action="{{action}}" method="get">
        {{> contributor}}
        <div class="left">Title:</div><div class="right"><input type="text" name="title" class="long" /></div>
        {{> publication}}
        <input type="hidden" name="type" value="book" />
        {{> submit}}
    </form>
</div>
<div id="tabs-2">
    <form action="{{action}}" method="get">
        {{> contributor}}
        <div class="left">Title:</div><div class="right"><input type="text" name="title" size="50"/></div>
        {{> publication}}
        <div class="left">Website title:</div><div class="right"><input type="text" name="archive" /></div>
        {{> accessed}}
        <input type="hidden" name="type" value="book" />
        {{> submit}}
    </form>
</div>
<div id="tabs-3">
    <form action="{{action}}" method="get">
        {{> contributor}}
        <div class="left">Title:</div><div class="right"><input type="text" name="title" size="50"/></div>
        {{> publication}}
        <div class="left">Database title:</div><div class="right"><input type="text" name="archive" /></div>
        {{> accessed}}
        <input type="hidden" name="type" value="book" />
        {{> submit}}
    </form>
</div>
<div id="tabs-4">
    <form action="{{action}}" method="get">
        {{> contributor}}
        <div class="left">Title:</div><div class="right"><input type="text" name="title" size="50"/></div>
        {{> publication}}
        <div class="left">Medium:</div><div class="right"><input type="text" name="medium" /></div>
        <input type="hidden" name="type" value="book" />
        {{> submit}}
    </form>
</div>
</script>