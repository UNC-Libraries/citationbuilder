<script id="tmpl-book" type="text/x-mustache-tmpl">
<ul>
    <li><a href="#tabs-1">in print</a></li>
    <li><a href="#tabs-2">online</a></li>
    <li><a href="#tabs-3">downloaded book</a></li>
</ul>
<div id="tabs-1">
    <form action="{{action}}" method="get">
        {{> contributor}}
        <div class="left">Title:</div><div class="right"><input type="text" name="title" class="long" /></div>
        {{> publication}}
        <input type="hidden" name="type" value="book" />
        {{> submit}}
    </form>
</div>
<div id="tabs-2">
    <form action="{{action}}" method="get">
        {{> contributor}}
        <div class="left">Title:</div><div class="right"><input type="text" name="title" size="50"/></div>
        {{> publication}}
        <div class="left">Web site or database title:</div><div class="right"><input type="text" name="archive" /></div>
        {{> accessed}}
        <input type="hidden" name="type" value="book" />
        {{> submit}}
    </form>
</div>
<div id="tabs-3">
    <form action="{{action}}" method="get">
        {{> contributor}}
        <div class="left">Title:</div><div class="right"><input type="text" name="title" size="50"/></div>
        {{> publication}}
        <div class="left">Type of eBook:</div>
        <div class="right">
            <input type="text" name="medium" />
            <span class="hint">ex: Kindle Edition, PDF eBook, etc.</span>
        </div>
        <input type="hidden" name="type" value="book" />
        {{> submit}}
    </form>
</div>
</script>